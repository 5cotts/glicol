{
  "hosting": {
    "public": "build",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "headers": [
      {
        "source": "/*",
        "headers": [ {
          "key": "Cross-Origin-Opener-Policy",
          "value": "same-origin"
        }]
      }, {
        "source": "/*",
        "headers": [ {
          "key": "Cross-Origin-Embedder-Policy",
          "value": "require-corp"
        }]
      }
    ],
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  },
  "database": {
    "rules": "database.rules.json"
  }
}
